{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb",
    "installedESLint": true,
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "strict": 0,
        "prefer-const": 1,
        "no-const-assign": 1,
        "no-console": 0,
        "react/jsx-uses-vars": 1,
        "jsx-quotes": ["error", "prefer-double"],
        "no-underscore-dangle": ["error", { "allow": ["_id"] } ],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}